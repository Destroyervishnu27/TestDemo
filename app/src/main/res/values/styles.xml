<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="android:Theme">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/redColor</item>
        <item name="android:textSize">@dimen/normal</item>

    </style>
</resources>