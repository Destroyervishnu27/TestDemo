<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_marginStart="@dimen/dp10"
                android:padding="@dimen/dp5"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_home"
                android:layout_marginLeft="@dimen/dp10" />

            <TextView

                android:id="@+id/tv_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginStart="@dimen/dp60"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/home"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/big"
                app:layout_constraintStart_toEndOf="@+id/iv_home"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp60" />

            <View
                android:id="@+id/div_0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerPrimaryColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_home" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
